extends layout

block layout-content
  div.View.landingview
    div
      nav
        img.image(src="/images/Logo_Uminho.jpeg",style='width:100px;height:75px;')
        div.nav-links
          ul.nav-links 
            li
              a(href="/index") Home    
            li
              a(href="/Equipa") Equipa    
            li
              a(href="/relatorios") Relatorios
            li 
              a(href="/dados") Dados
            li 
                a(href="/login") Login
            if(isAuthenticated)   
              li 
                a(href="/logout") LogOut
            if(Usertype)
              li 
                a(href="/AdminDashBoard") Dashboard 
    block content
      div.text-center 
        form(class="form-signin", method="POST" action="/login")
          #error
            if error
              p.text-danger ERROR! 
          div.centertext
            img.loginimage(src="/images/WebsiteLogo.jpeg")
          h1.textcolorwhite Login
          div.center
          //- Input
          label(for="inputEmail" class="sr-only") E-mail
          input(type="email" name ="username" id="inputEmail" class="form-control" placeholder="Email adress" data-toggle="tooltip" data-placement = "right" title ="Introduza o e-mail associado à sua conta" required autofocus)
          
          label(for="inputPassword" class="sr-only") Password
          input(type="password" name ="password" id="inputPassword" class="form-control" placeholder="Password" data-toggle="tooltip" data-placement = "right" title ="Introduza a sua password" required)

          -var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            
          button(class=buttonClass type="submit") Sign in
          p Se não tiver uma conta registe-se aqui
          button(class=buttonClass onclick="location.href='/register'") Register